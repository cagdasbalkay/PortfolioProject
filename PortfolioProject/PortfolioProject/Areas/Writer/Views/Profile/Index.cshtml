@model Core_Proje.Areas.Writer.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<link rel="stylesheet" href="~/skydash/vendors/css/my.css" />

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerini Düzenle</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyad</label>
                    <input type="text" asp-for="Surname" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputName1">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre Tekrar</label>
                    <input type="password" asp-for="PasswordConfirm" class="form-control" id="exampleInputName1">
                    @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="examplePicture">Kullanıcı Resmi</label>
                    <input class="inpFile" type="file" asp-for="Picture">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="/Writer/Dashboard/Index/" class="btn btn-light">İptal</a>

                @* <button href="/Writer/Dashboard/Index/" class="btn btn-light">İptal</button> *@
            </form>
        </div>
    </div>
</div>


