@using EntityLayer.Concrete
@model List<ToDoList>

<div class="col-md-12 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yapılacaklar Listesi</h4>
            <div class="add-items d-flex">
                <input type="text" class="form-control todo-list-input" placeholder="Bir görev girin...">
                <button type="button" class="add btn btn-primary todo-list-add-btn" onclick="addItem()">Ekle</button>
            </div>
            <div class="list-wrapper">
                <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom" id="todo-list">
                    @foreach (var item in Model)
                    {
                        <li>
                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input class="checkbox" type="checkbox"> @item.Content
                                </label>
                            </div>
                            <i class="remove mdi mdi-close-box" onclick="removeItem(this)"></i>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addItem() {
            const list = document.getElementById('todo-list');
            const input = document.querySelector('.todo-list-input');
            const maxItems = 5;

            if (list.children.length < maxItems && input.value.trim() !== "") {
                const li = document.createElement('li');
                li.innerHTML = `
                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input class="checkbox" type="checkbox"> ${input.value}
                                </label>
                            </div>
                            <i class="remove mdi mdi-close-box" onclick="removeItem(this)"></i>
                        `;

                list.prepend(li);
                input.value = "";
            } else if (list.children.length >= maxItems) {
                alert("Maksimum 5 öğe girebilirsiniz.");
            } else {
                alert("Lütfen bir görev girin.");
            }
        }

        function removeItem(element) {
            const list = document.getElementById('todo-list');
            list.removeChild(element.parentElement);
        }
    </script>
}
