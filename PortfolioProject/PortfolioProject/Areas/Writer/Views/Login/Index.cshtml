@model Core_Proje.Areas.Writer.Models.UserLoginViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Kullanıcı Girişi</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Merhaba, Hoş Geldiniz!</h4>
                            <h6 class="font-weight-light">Devam Etmek İçin Lütfen Giriş Yapın</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" name="Username" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Kullanıcı Adı">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre">
                                </div>
                                <div class="checkbox-container" style="margin-left: 20px;">
                                    <input type="checkbox" class="form-check-input" id="showPassword" onclick="togglePassword()">
                                <label class="form-check-label" for="showPassword">Şifreyi Göster</label>
                               </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabın yok mu? <a href="/Writer/Register/Index/" class="text-primary">Oluştur</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/skydash/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/skydash/vendors/js/myJS.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
   @*  <script src="~/skydash/vendors/js/off-canvas.js"></script>
    <script src="~/skydash/vendors/js/hoverable-collapse.js"></script>
    <script src="~/skydash/vendors/js/template.js"></script>
    <script src="~/skydash/vendors/js/settings.js"></script>
    <script src="~/skydash/vendors/js/todolist.js"></script> *@
    <!-- endinject -->
</body>

</html>
