@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Mesaj Detayları</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        <input type="text" class="form-control" asp-for="MessageID">
                    </div>
                    <div class="form-group">
                        <label>Ad</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        <input type="text" class="form-control" asp-for="Mail">
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="text" class="form-control" asp-for="Date">
                    </div>

                    <div class="form-group">
                        <label>Mesaj</label>
                        <textarea class="form-control" rows="6" asp-for="Content"></textarea>
                    </div>
                    <a asp-action="Index" class="btn btn-primary mr-2">İletişim Sayfasına Dön</a>
                </form>
            </div>
        </div>
    </div>


